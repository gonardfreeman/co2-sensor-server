{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2024",
    "module": "node20",
    "lib": ["es2021"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "baseUrl": "."
  },
  "include": ["./"]
}
